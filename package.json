{
  "name": "agent-breadcrumbs-repo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:mcp",
    "build:all": "npm run build:mcp && npm run build:dashboard",
    "build:mcp": "npm --workspace packages/mcp run build",
    "build:dashboard": "npm --workspace apps/dashboard run build",
    "dev:mcp": "npm --workspace packages/mcp run dev",
    "dev:dashboard": "npm --workspace apps/dashboard run dev",
    "start:mcp": "npm --workspace packages/mcp run start",
    "start:dashboard": "npm --workspace apps/dashboard run start",
    "test": "npm --workspace packages/mcp run test",
    "test:integration": "npm --workspace packages/mcp run test:integration",
    "pack:dry-run:mcp": "npm --workspace packages/mcp run pack:dry-run"
  }
}
