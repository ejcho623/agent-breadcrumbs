{
  "name": "agent-breadcrumbs",
  "version": "0.1.2",
  "description": "MCP server for lightweight agent work logging",
  "main": "dist/index.js",
  "files": [
    "dist/**",
    "examples/schema_profiles/*.json",
    "examples/server-config*.sample.json"
  ],
  "bin": {
    "agent-breadcrumbs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "pack:dry-run": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npm run test",
    "test": "npm run build && node --test test/*.test.mjs",
    "test:integration": "npm run build && node --test test/integration/*.test.mjs"
  },
  "keywords": [
    "mcp",
    "agent",
    "observability",
    "logging"
  ],
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
